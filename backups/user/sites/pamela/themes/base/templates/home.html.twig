{% extends 'partials/base.html.twig' %}

{% block content %}

  <div id="page-wrapper" class="page-width">

  <div id="page">
    <div class="grid">

      <div class="col-1/3">
        {% for p in page.find('/bears/').children.order('date','desc').slice(0,3) %}
          <div class="article" style="clear:left; display:block;">
            <article class="article home">
              <h3><a href="{{ p.url }}">{{ p.title }}</a></h3>
              <a href="{{ p.url }}"> {{ p.summary }}</a>
            </article>
          </div>
        {% endfor %}
      </div>

      <div class="col-1/3">
        {% for p in page.find('/toys/').children.order('date','desc').slice(0,3) %}
          <div class="article">
            <article class="article home">
              <h3><a href="{{ p.url }}">{{ p.title }}</a></h3>
              <a href="{{ p.url }}">{{ p.summary }}</a>
            </article>
          </div>
        {% endfor %}
      </div>

      <div class="col-1/3">
        {% for p in page.find('/other/').children.order('date','desc').slice(0,4) %}
          <div class="article">
            <article class="article home">
              <h3><a href="{{ p.url }}">{{ p.title }}</a></h3>
              <a href="{{ p.url }}">{{ p.summary }}</a>
            </article>
          </div>
        {% endfor %}
      </div>

    </div>

    <br/>
    See more:  <a href="/pamela/bears">Bears</a>, <a href="/pamela/toys">Toys</a>, <a href="/pamela/other">Other</a>
  </div>

  </div>

{% endblock %}