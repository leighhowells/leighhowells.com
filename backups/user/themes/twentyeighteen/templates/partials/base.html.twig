  <div class="light"></div>
  <div class="light"></div>
</div>
{%  endif %}


<header role="banner" id="header">
  <div class="image-banner">
    <div class="page-width">
      <nav role="navigation" class="main">
        <a href="/about" class="navAbout">Leigh</a>
        <a href="/design" class="navDesign">Designs</a>
        <a href="/articles" class="navArticles">Writes</a>
        <a href="/music" class="navMusic">Tinkles</a>
        <a href="/blog" class="navBlog">Witters</a>
      </nav>

      <a class="logo" href="/"><img src="{{ theme_url }}/img/logo.svg"></a>
      <div class="banner-text">
        <h1>{{ page.title }}</h1>
        <p class="home-subtitle">{{ page.header.bannertext }}</p>
      </div>
    </div>
  </div>
</header>

<div class="page-content">

  {% block body %}
    {% block content %} {% endblock %}
  {% endblock %}
</div>

<footer>
  <div class="container">
    <div class="page-width">
      <div class="grid">
        <div class="col-1/3 col1">
          <div class="module">
            <ul>
              <li><a href="/derek" target="new">LinkedIn</a></li>
              <li><a href="/pamela/about" target="new">Twitter</a></li>
              <li><a href="/archive" target="new">Archive</a></li>
              <li><a href="http://www.headscape.co.uk" target="new">Headscape</a></li>
            </ul>

            <!--{% include 'partials/simplesearch_searchbox.html.twig' %}-->
          </div>
        </div>
      </div>

    </div>
  </div>

</footer>
<div class="copyright">
  <div class="page-width">
    Leigh Howells 2018. Hand made using <a href="https://getgrav.org/" target="_blank">Grav</a> CMS.
  </div>
</div>
</body>

